<Page
    x:Class="ÄrendeUppgift.CommentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ÄrendeUppgift"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel>
            <ComboBox x:Name="cmbIssueTitle" PlaceholderText="Selecte An Issue" Margin="20"/>
            <TextBox x:Name="CommentBox" PlaceholderText="Comment" Margin="20"/>
            <Button x:Name="CreateComment" Content="Create Comment" Click="CreateComment_Click" Margin="20"/>
        </StackPanel>

    </Grid>
</Page>
